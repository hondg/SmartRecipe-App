<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <ImageView
                    android:id="@+id/recipe_details_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:scaleType="fitCenter"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp" />

                <TextView
                    android:id="@+id/recipe_details_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/recipe_details_image"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:text="Recipe Name"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ingredients_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333" />

                <TextView
                    android:id="@+id/recipe_details_ingredients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Ingredients"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/instructions_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Instructions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333" />

                <TextView
                    android:id="@+id/recipe_details_instructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Instructions"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</layout>
